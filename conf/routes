# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /products                          controllers.ProductController.getProducts()
GET     /product/:id                        controllers.ProductController.getOneProduct(id: Integer)
POST    /product                           controllers.ProductController.addProduct(request : Request)
PUT     /product                           controllers.ProductController.modifyProduct(request: Request)
DELETE  /product/:id                        controllers.ProductController.removeProduct(id: Integer)

GET    /oauthlogin                        controllers.LoginController.sendGitOAuth()
GET     /callback                          controllers.LoginController.callback(code: String,  request: Request)
GET    /logout                             controllers.LoginController.logout(request: Request)

GET     /index                              controllers.LoginController.index()
GET     /user/:id                           controllers.LoginController.getUserInfo(id: Integer, request : Request)

GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
